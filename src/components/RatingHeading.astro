---
import StarRating from './StarRating.svelte'
import type { Product } from '../pages/index.astro'

export interface Props {
	rating: number;
	productData: Product;
}

const { rating, productData } = Astro.props
---

<section class="rating-heading">
	<img
		src="https://via.placeholder.com/200"
		alt={`Placehodler image for ${productData.name}`}
		class="rating-heading__media"
	>
	<div class="rating-heading__info">
		<StarRating rating={rating} />
		<p class="rating-heading__name">{productData.name}</p>
	</div>
</section>

<style lang="scss">
.rating-heading {
	display: grid;
	grid-template: repeat(2, auto) / 100%;
	gap: 1.6rem;
	&__media {
		width: 100%;
		height: 200px;
		object-fit: cover;
	}
	&__info {
		padding-inline: 1.6rem;
	}
}
</style>
